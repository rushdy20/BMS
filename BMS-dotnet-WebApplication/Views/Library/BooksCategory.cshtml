@model BMS_dotnet_WebApplication.Models.LibraryVM.AdminBooksCategoryVM

@{
    ViewData["Title"] = "BooksCategory";
}

<h1>BooksCategory</h1>

@using (Html.BeginForm("AddCategory", "Library", FormMethod.Post, new { @id = "partialform" }))
{
    <div class="form-group row container custom-box">
        <div class="col-sm-8">
            @Html.LabelFor(m => m.BooksCategory.Name)
            @Html.TextBoxFor(m => m.BooksCategory.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.BooksCategory.Name)
        </div>
        <div class="col-sm-8">
            @Html.LabelFor(m => m.BooksCategory.Comment)
            @Html.TextBoxFor(m => m.BooksCategory.Comment, new { @class = "form-control" })
            
        </div>
        <div class="col-sm-4 marginT32">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>

        @*</div>
            <div class="form-group row container">*@
        <div class="col-sm-12">
            <ul>
                <li>
                    Books Categories
                    <ul>
                        @foreach (var category in Model.ExistingCategories)
                        {
                            <li>
                                @category.Name -- @category.Comment
                            </li>
                        }
                    </ul>
                </li>
            </ul>
        </div>
        <div class="col-sm-4 marginT32">
            @Html.ActionLink("Save", "Save", "Library", null, new { @class = "btn btn-success" })
        </div>
    </div>
    
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
