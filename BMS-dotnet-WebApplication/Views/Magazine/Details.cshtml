<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".content-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse content-collapse">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">   @Html.ActionLink("Back to Magazine", "CurrentEdition", "Magazine", new { Id = Model.Content.ContentId }, new { @class = "btn btn-link margin-Top-10" })</liclass="nav-item">
                @foreach (var content in Model.OtherContents)
                {
                    <li class="nav-item">
                        @Html.Partial("_miniContentCart", content)
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<div class="content-group row">
    <div class="card">
        <div class="margin-Top-10" >
            <img class="center" src="@Url.Action("GetImage", new {filename = $"{Model.Content.FolderName}/{Model.Content.MainImage}", section = "magazine"})" alt="...">
        </div>
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(m => m.Content.Heading)</h5>
            <p class="card-text multiline">
                @Html.Raw(Model.Content.Body)
            </p>
            @if (Model.Content.YouTubLink?.Trim().Length > 1)
            {
                <div class="margin-15">
                    <iframe width="560" height="315" src=@Model.Content.YouTubLink sandbox="allow-forms allow-scripts allow-pointer-lock allow-same-origin allow-top-navigation"></iframe>

                </div>
            }

            @if (Model.Content.SubImage1 != null)
            {
                <div class="row float-left margin-15">

                    <img src="@Url.Action("GetImage", new {filename = $"{Model.Content.FolderName}/{Model.Content.SubImage1}", section = "magazine"})" alt="...">
                </div>
            }

            @if (Model.Content.SubImage2 != null)
            {
                <div class="row float-left margin-15">

                    <img src="@Url.Action("GetImage", new {filename = $"{Model.Content.FolderName}/{Model.Content.SubImage2}", section = "magazine"})" alt="...">
                </div>
            }

            @if (Model.Content.SubImage3 != null)
            {
                <div class="row float-left margin-15">

                    <img src="@Url.Action("GetImage", new {filename = $"{Model.Content.FolderName}/{Model.Content.SubImage3}", section = "magazine"})" alt="...">
                </div>
            }

        </div>
        <div class="form-group">
            <small id="emailHelp" class="form-text text-muted">Edited By : @Model.Content.AuthoredBy On : @Model.Content.EnteredDate </small>
        </div>


        @*@if (ViewBag.LoggedIn)
            {
                <div class="form-group">
                    @Html.ActionLink("Edit", "CreateContent", "Magazine", new { id = Model.ContentId }, new { @class = "btn btn-primary" })
                </div>
            }*@
    </div>
</div>

